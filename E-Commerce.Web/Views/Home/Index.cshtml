@using E_Commerce.Domain.Models
@model IEnumerable<FeaturedCategory>

@{
    ViewData["Title"] = "Home Page";
}

<div class="home-page">
    <div class="home-page-wrapper">
        <div class="home-page-inner">
            @await Html.PartialAsync("_HomeCarousel")

            <div class="container-fluid px-5">
                <div class="my-4">
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-md-4 col-sm-6 mb-4">
                                <div class="card h-100 border-0 shadow-sm product-card">

                                    <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id class="text-decoration-none text-dark">
                                        <div class="card-body p-2">
                                            <h6 class="card-title text-uppercase fw-bold mb-1 text-center" title="@product.Brand" style="line-height: 1.4em; max-height: 2.8em; overflow: hidden;">
                                                @product.Brand
                                            </h6>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <img src="~/images/work1-2200_D.jpg" alt="Banner-1">

            <div class="container-fluid px-5">
                <div class="my-4">
                    <h2 class="mb-4 fw-bold text-center">Featured Styles</h2>

                    <div class="row">
                        @for (var i = 1; i <= 4; i++)
                        {
                            <div class="col-md-3 col-sm-6 mb-4">
                                <div class="card h-100 border-0 shadow-sm product-card">
                                    <a asp-controller="Home" asp-action="Details" asp-route-id="" class="text-decoration-none text-dark">
                                        <div class="img-wrapper">
                                            <img src="@($"images/featured/{i}-FS.jpg")" class="card-img" alt="Category Image">
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <img src="~/images/1440_Story_hero_D-2.jpg" alt="Banner-2">
        </div>
    </div>
</div>


<style>
    .img-wrapper {
        overflow: hidden;
        background-color: #f7f7f7;
        /* height: 220px; */
        position: relative;
    }

    .card-img {
        transition: transform 0.3s ease-in-out;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-title{
        line-height: 1.4em;
        max-height: 2.8em;
        overflow: hidden;
        padding: 0.5rem 0.5rem 3rem;
        font-size: 1.5rem;
        font-family: TradeGothicLT-BoldCondTwenty, TradeGothicLT-BoldCondTwenty-fallback, sans-serifsans-serif;
    }

    .product-card:hover .card-img {
        transform: scale(1.1);
    }

    .product-card {
        transition: box-shadow 0.3s;
    }

        .product-card:hover {
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }
</style>