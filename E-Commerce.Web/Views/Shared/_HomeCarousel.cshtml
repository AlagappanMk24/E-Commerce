    }

    .jq-carousel-item {
        position: relative;
        display: none;
        width: 100%;
        transition: transform 0.6s ease-in-out;
        backface-visibility: hidden;
    }

        .jq-carousel-item img {
            width: 100%;
            height: auto;
            display: block;
        }

        .jq-carousel-item.active {
            display: block;
            transform: translateX(0);
        }


    .jq-carousel-item-next.start-right {
        position: absolute;
        top: 0;
        left: 0;
        display: block;
        transform: translateX(100%);
    }

    .jq-carousel-item-next.start-left {
        position: absolute;
        top: 0;
        left: 0;
        display: block;
        transform: translateX(-100%);
    }


    .jq-carousel-item.active.jq-carousel-item-left {
        transform: translateX(-100%);
    }

    .jq-carousel-item.active.jq-carousel-item-right {
        transform: translateX(100%);
    }

    .jq-carousel-item-next.jq-carousel-item-left,
    .jq-carousel-item-next.jq-carousel-item-right {
        transform: translateX(0);
    }

    .jq-carousel-prev, .jq-carousel-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0,0,0,0.5);
        color: #fff;
        border: none;
        font-size: 28px;
        padding: 8px 14px;
        cursor: pointer;
        z-index: 10;
        transition: background 0.3s ease;
    }

        .jq-carousel-prev:hover, .jq-carousel-next:hover {
